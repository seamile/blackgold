.countdown-wrap {
    display: flex;
    align-items: center;
}

.millisecond {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.millisecond .text {
    display: flex;
    align-items: center;
    justify-content: center;
}

@-webkit-keyframes scrollMilliSecond {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(-100%);
    }
}

@keyframes scrollMilliSecond {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(-100%);
    }
}

.scrollMilliSecond {
    animation: scrollMilliSecond .8s steps(10) infinite;
}