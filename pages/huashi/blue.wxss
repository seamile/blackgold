page {
    background: #fff;
}

.header {
    display: flex;
    flex-direction: column;
    height: 300rpx;
    background-color: #000;
    color: #fff;
}

.header text {
    margin-left: 30rpx;
    font-size: 26rpx;
    margin-top: 10rpx;
}

.title {
    font-size: 16px;
    color: #333;
    padding-left: 30rpx;
}

.tool {
    margin-bottom: 20rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.input {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    font-size: 28rpx;
    color: #333;
    height: 70rpx;
}

.input input {
    border-bottom: 2rpx solid #969696;
    padding: 10rpx;
    margin-bottom: 20rpx;
    width: 540rpx;
}

.result view {
    padding: 20rpx;
    background-color: #fff;
    margin: 20rpx 0;
    border-bottom: 2rpx solid #969696;
    color: #969696;
}

.result button {
    margin-top: 20rpx;
    background: #000;
}

.result button::after {
    display: none;
}

.title {
    height: 80rpx;
    line-height: 80rpx;
}

.icon {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    float: left;
}

.ad {
    width: 85%;
}

.adf {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}