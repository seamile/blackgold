page {
  background: #000000;
  padding: 0;
  margin: 0;
  height: 100%;
  overflow: hidden;
}

.content {
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  height: 80%;
}

.content .title {
  height: 140rpx;
  padding: 20rpx;
}

.content .title .en {
  line-height: 70rpx;
  font-size: 34rpx;
}

.content .title .cn {
  line-height: 70rpx;
  font-size: 46rpx;
  font-weight: 600;
}

.content .info {
  padding: 20rpx;
}

.content .info .cil {
  font-size: 30rpx;
  line-height: 60rpx;
  font-weight: 400;
}

.content .info .name {
  font-size: 36rpx;
  line-height: 60rpx;
  font-weight: 600;
}