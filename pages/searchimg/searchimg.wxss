.search-container {
    height: 6%;
    margin: 20rpx;
    background: #f7f8fa;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 5rpx;
    border-radius: 25px;
}

.search {
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}

input {
    width: 90%;
    font-size: 30rpx;
}

.scroll-body {
    height: 91%;
    width: 100%;
}

.grid-item {
    margin: 10rpx 0 10rpx 20rpx;
    width: 30%;
    height: 400rpx;
    float: left;
}

.g {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.g,.photo {
    width: 100%;
    height: 100%;
}

.photo {
    border-radius: 8px;
    position: absolute;
}

.adContainer {
    box-sizing: border-box;
    padding: 10rpx;
    width: 100%;
    float: left;
}