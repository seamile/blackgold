page {
  background: #000000;
}

.right-box {
  padding: 10rpx 14rpx 0 14rpx;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  top: 140rpx;
}


.page-view {
  width: 100%;
  overflow: hidden;
}

.sortbox,
.sortimage {
  width: 356rpx;
  height: 220rpx;
}

.sortbox {
  margin: 2rpx;
  border-radius: 5rpx;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.emptybox {
  width: 356rpx;
  height: 10rpx;
  margin: 2rpx;
  border-radius: 5rpx;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}

.sorttitle {
  overflow: hidden;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  padding: 8rpx 15rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 15rpx 0 0 0;
  font-weight: 500;
  font-size: 28rpx;
}

.categorie-header {
  height: 400rpx;
  width: 100%;
  position: relative;
}

.categorie-header image {
  /* border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px; */
  height: 400rpx;
  width: 100%;
  position: absolute;
  z-index: 1;
}

.categorie-text {
  position: absolute;
  width: auto;
  left: 30rpx;
  bottom: 20rpx;
  color: #FFF;
  z-index: 99;
  padding: 20rpx 40rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 20rpx;
}

.categorie-text text {
  font-size: 36rpx;
  color: #fff;
  font-weight: 500;
  display: block;
  line-height: 40rpx;
}

.categorie-text view {
  font-size: 26rpx;
  color: #fff;
  font-weight: 200;
  line-height: 40rpx;
}

.sortround {
  background-color: rgba(255, 255, 255, 0.8);
  position: absolute;
  top: 340rpx;
  /* margin: 0rpx 0rpx 26rpx 20rpx; */
  width: 12rpx;
  height: 12rpx;
  right: 20rpx;
  border-radius: 12rpx;
}

.sortround-1 {
  right: 42rpx;

}

.homeAD,
.listtit {
  width: auto;
  height: auto;
}

.listtit {
  margin-top: 30rpx;
  margin-left: 25rpx;
  display: flex;
  flex-direction: row;
}

.listleft {
  font-size: 40rpx;
  font-weight: bolder;
  color: #fff;
  display: block;
  width: 300rpx;
}

.listright {
  display: block;
  width: 100%;
  margin-left: 350rpx;
  width: 18rpx;
  margin-top: 14rpx;
}

.jiangqie-news-iconimg {
  float: left;
  margin-top: 0rpx;
  margin-bottom: 10rpx;
  height: 50rpx;
  width: 50rpx;
}

.ad-games {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}