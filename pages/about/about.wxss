 page {
    background: #000000;
  }
 .hope-ad{
    margin: 10rpx 30rpx;
    width: 700rpx;
    border-radius: 16rpx;
    overflow: hidden;
 }
.ad{
    width: 100%;
    text-align: center;
    color:#1385FF;
    font-size: 26rpx;
    border-bottom: 2rpx #1385FF solid;

}
.hope-box{
    height: 312rpx;
    width: 100%;
    margin-bottom: 42rpx;
}
.hope-box image{
    height: 312rpx;
    width: 100%;
}
.hope-text-box{
    padding: 0rpx 44rpx;
    color: #FFF;
}
.hope-text{
    text-indent: 2rem;
    line-height: 1.6rem;
    font-size: 20rpx;
    margin-bottom: 42rpx;
    color: #FFF;
}
.hope-title{
    font-size: 24rpx;
    font-weight: 700;
    margin-bottom: 30rpx;
    color: #FFF;
}