<!--pages/list/list.wxml-->
<import src="../../templates/nodata/nodata.wxml" />
<import src="../../templates/poplogin/poplogin.wxml" />

<view class="container">
  <view class="list-box data-v-0034d6f4">
    <block wx:if="{{posts.length > 0}}">
      <view class="list-box data-v-0034d6f4">
        <block wx:for="{{posts}}" wx:key="thumbnail">
          <image src="{{item.thumbnail}}" mode="aspectFill" 
                 class="image data-v-0034d6f4" 
                 index="{{index}}"
                 data-id="{{item.id}}" 
                 catchtap="handlerArticleClick">
          </image>
          <block wx:if="{{(index+1) % 12 == 0}}">
            <!-- <view class="ad-info-stream"><ad unitId="adunit-6d50f37cbe7f552d" /></view> -->
            <import src="/templates/ad.wxml"/>
            <template style="width: 100%;" is="ad" data="{{setAD,pagead}}" />
          </block>
        </block>
      </view>

      <!--加载loadding-->
      <tui-loading visible="{{loading}}"></tui-loading>
      <tui-nomore visible="{{!pullUpOn}}"></tui-nomore>
    </block>

    <block wx:elif="{{loaded}}">
      <ad class="bgads" unitId="adunit-ad838463e466ec75"></ad>
      <template is="jiangqie_nodata" />
    </block>
  </view>
</view>

<template is="jiangqie_poplogin" data="{{show:showPopLogin}}" />
